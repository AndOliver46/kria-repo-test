@{
    ViewData["Title"] = "Login";
}

<div class="text-center">
    <div class="login-background"></div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="login-container">
                    <h1 class="text-center">Login</h1>
                    <form asp-action="Login" method="post">
                        <div class="form-group">
                            <label for="inputEmail">E-mail</label>
                            <input type="email" class="form-control" id="inputEmail" name="Email" placeholder="E-mail" required>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword">Senha</label>
                            <input type="password" class="form-control" id="inputPassword" name="Password" placeholder="Senha" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Entrar</button>
                        <a asp-controller="Conta" asp-action="CriarConta" class="btn btn-link">Criar Conta</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
